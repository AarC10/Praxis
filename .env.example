# Which backend to use for text generation.
# anthropic | openai | ollama
PRAXIS_LLM_PROVIDER=anthropic

# API Keys
ANTHROPIC_API_KEY=sk-
OPENAI_API_KEY=sk-

# Ollama Settings
PRAXIS_OLLAMA_URL=http://localhost:11434

# Path to the SQLite database file
PRAXIS_DB_PATH=~/.praxis/praxis.db

# Directory where generated skill source files are written.
PRAXIS_DATA_DIR=~/.praxis/data

# Cosine-similarity threshold above which an existing skill is reused instead
PRAXIS_REUSE_THRESHOLD=0.75
